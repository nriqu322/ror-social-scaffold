<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
        </span>

        <% if current_user.pending_friends.include?(user) %>
          <p>PENDING</p>
        <% elsif current_user.friend_requests.include?(user) %>
          <!-- <p><%= button_to 'Accept' "/confirm_friend", class: 'btn btn-secondary'</p> -->
          <p><%= button_to 'Decline' "/friend_delete?id=#{user}" method: :delete, class: 'btn btn-secondary'</p>
        <% elsif user != current_user && current_user.friend?(user) == false %>
          <%= button_to 'request',  "/friend_request?id=#{user.id}", class: 'btn btn-secondary' %>
        <% end %>

      </li>
    <% end %>
  </ul>
</section>
